{
  "name": "eslint-plugin-rule-adoption",
  "version": "0.0.0-development.2",
  "description": "ESLint plugin for incremental rule adoption.",
  "keywords": [
    "eslint",
    "eslintplugin",
    "monorepo",
    "suppressions"
  ],
  "author": "Jugbot",
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "README.md",
    "package.json",
    "lib"
  ],
  "scripts": {
    "eslint": "eslint --no-error-on-unmatched-pattern --max-warnings 0 --ext .js \"lib/**/*\"",
    "lint:check": "yarn eslint",
    "lint:fix": "yarn lint --fix",
    "prettier": "prettier \"*.{js,json,yml,yaml,md}\" \"lib/**/*\"",
    "format:check": "yarn prettier --check",
    "format:fix": "yarn prettier --write",
    "test": "cd ./fixtures && yarn --frozen-lockfile && yarn workspaces run test",
    "types:check": "tsc",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/eslint": "^8.44.9",
    "@types/estree": "^1.0.5",
    "@types/node": "^20.12.7",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-plugin": "^6.2.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
